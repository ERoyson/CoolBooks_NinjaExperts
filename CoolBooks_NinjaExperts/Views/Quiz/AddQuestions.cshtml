@model CoolBooks_NinjaExperts.Models.Questions

@{
    ViewData["Title"] = "AddQuestions";
}



<h4>Add Questions</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddQuestions">
            <input type="hidden" name="QuizId" value="@Model.QuizId" />
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Question" class="control-label"></label>
                <input asp-for="Question" class="form-control" />
                <span asp-validation-for="Question" class="text-danger"></span>
            </div>
            @for(int i=0; i<4; i++)
            {
                    <div class="input-group">
                      <span class="input-group-addon">
                       <input name="options[@i]" class="form-control" placeholder="Option @(i+1)">
                      </span>
                     <input type="radio" name="answer" value="@i"> Answer
                    </div>
                <span asp-validation-for="QuizOptions" class="text-danger"></span>
            }            
           
            <hr />
            <div class="form-group">
                <input type="submit" name="buttonSelect" value="Add Questions" class="btn btn-primary" />
                <input type="submit" name="buttonSelect" value="Finish" class="btn btn-success" />
            </div>
        </form>
    </div>
    <p style="color:red;"><b>*If no answer is provided, then option 1 will automatically be set to default answer</b></p>
</div>