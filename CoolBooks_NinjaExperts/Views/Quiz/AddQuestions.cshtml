@model CoolBooks_NinjaExperts.Models.Questions

@{
    ViewData["Title"] = "AddQuestions";
}



<h4>Add Questions</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddQuestions">
            <input type="hidden" asp-for="Quiz.UserId" />
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Question" class="control-label"></label>
                <input asp-for="Question" class="form-control" />
                <span asp-validation-for="Question" class="text-danger"></span>
            </div>
            @for(int i=0; i<4; i++)
            {
                <div class="form-group">
                <label asp-for="QuizOptions[i].Option" class="control-label"></label>
                <input asp-for="QuizOptions[i].Option" class="form-control" />
                <span asp-validation-for="QuizOptions[i].Option" class="text-danger"></span>
            </div>
            }            
            
            
            <div class="form-group">
                <input type="submit" value="Add Questions" class="btn btn-primary" />
                <input type="submit" value="Finish" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>