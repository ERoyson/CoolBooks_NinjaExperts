@model CoolBooks_NinjaExperts.ViewModels.PlayQuizViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Quiz</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <input type="hidden" asp-for="@Model.Quiz.UserId" />
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Quiz.Name" class="control-label"></label>
                <input asp-for="@Model.Quiz.Name" class="form-control" />
                <span asp-validation-for="@Model.Quiz.Name" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <select class="form-select" id="books" name="BookId" asp-items="Model.Books">
                <option value="0">--Select/Search Book--</option>
                </select>
            </div>
                <br />
            <div class="form-group">
                <input type="submit" value="Add Questions" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @*<a asp-action="Index">Back to List</a>*@
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css"/>
        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
        <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
        <script type="text/javascript">
            $(function () {
                $("#books").select2();
            });
</script>